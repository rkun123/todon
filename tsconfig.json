{
	"extends": "ts-node/node12/tsconfig.json",
	"ts-node": {
		"files": true,
	},
	"compilerOptions": {
		"lib": [
			"ES5",
			"ES6"
		],
		"target": "ES5",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	],
}